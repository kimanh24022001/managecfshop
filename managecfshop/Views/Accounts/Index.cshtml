@model IEnumerable<coffeeShop.Models.Account>

@{
    ViewBag.Title = "Index";
}

<h2>Manage Account</h2>

<button class="btn btn-primary" style="margin: 10px auto; color: white; text-decoration: none; "> @Html.ActionLink("Create New", "Register", "Account", null, new { style = "color:white" })</button>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <button class="btn btn-success">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { style = "color:white" })
                </button>
                <button class="btn btn-warning">
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { style = "color:white" })
                </button>
                <button class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { style = "color:white" })
                </button>
            </td>
        </tr>
    }

</table>
