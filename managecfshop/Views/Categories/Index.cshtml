@model IEnumerable<ManageCoffeeShop.Model.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Category</h2>

<button class="btn btn-primary" style="margin: 10px auto; color: white; text-decoration: none; "> @Html.ActionLink("Create New", "Create", null, new { style = "color:white" })</button>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadFile)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCategory)
            </td>
            <td>
                <img src="@Url.Content(item.UploadFile)" width="250" heigth="250">
            </td>
            <td>
                <button class="btn btn-success">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { style = "color:white" })
                </button>
                <button class="btn btn-warning">
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { style = "color:white" })
                </button>
                <button class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { style = "color:white" })
                </button>
            </td>
        </tr>
    }

</table>
