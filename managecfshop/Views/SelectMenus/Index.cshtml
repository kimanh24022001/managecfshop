@model IEnumerable<ManageCoffeeShop.Models.SelectMenu>

@{
    ViewBag.Title = "Index";
}

<h2>Menu</h2>

<button class="btn btn-primary" style="margin: 10px auto; color: white; text-decoration: none; "> @Html.ActionLink("Create New", "Create", null, new { style = "color:white" })</button>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameFood)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountFood)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceFood)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UploadFile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddToCart)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameFood)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountFood)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceFood)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                <img src="@Url.Content(item.UploadFile)" width="100" heigth="100">
            </td>
            <td>

                <button class="btn btn-primary">
                    @Html.ActionLink("-", "Sub", new { id = item.Id }, new { style = "color:white" })
                </button>
                @Html.DisplayFor(modelItem => item.AddToCart)

                <button class="btn btn-primary">
                    @Html.ActionLink("+", "Add", new { id = item.Id }, new { style = "color:white" })
                </button>
            </td>
            <td>
                <button class="btn btn-success">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { style = "color:white" })
                </button>
                <button class="btn btn-warning">
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { style = "color:white" })
                </button>
                <button class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { style = "color:white" })
                </button>
            </td>
        </tr>
    }

</table>
<button class="btn btn-primary" style="margin: 10px auto; color: white; text-decoration: none; "> @Html.ActionLink("Complete", "complete", null, new { style = "color:white" })</button>

