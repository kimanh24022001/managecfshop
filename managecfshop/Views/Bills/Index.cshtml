@model IEnumerable<ManageCoffeeShop.Models.Bill>

@{
    ViewBag.Title = "Index";
}

<h2>Bill</h2>

<button class="btn btn-primary" style="margin: 10px auto; color: white; text-decoration: none; "> @Html.ActionLink("Create New", "Create", null, new { style = "color:white" })</button>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateCheckIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCheckOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdTable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCheckIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCheckOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <button class="btn btn-success">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { style = "color:white" })
                </button>
                <button class="btn btn-warning">
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { style = "color:white" })
                </button>
                <button class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { style = "color:white" })
                </button>
        </tr>
    }
    <tfoot>
        <tr>
            <td>Investment</td>
            <td id="total">100000000</td>
        </tr>
        <tr>
            <td>Revenue</td>
            <td id="total">@Model.Sum(i => i.TotalPrice)</td>
        </tr>

    </tfoot>
</table>
